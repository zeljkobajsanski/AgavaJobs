<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <FrameLayout
           android:id="@+id/premijum1"
           android:layout_margin="4dip"
           android:layout_width="64dip"
           android:layout_height="64dip"
           android:background="@color/opacity_black">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:src="@drawable/brief_case"/>
       </FrameLayout>
        <FrameLayout
            android:id="@+id/hot1"
            android:layout_margin="4dip"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:background="@color/opacity_black">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/fire_02"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/standard1"
            android:layout_margin="4dip"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:background="@color/opacity_black">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/database"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/biografija"
            android:layout_margin="4dip"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:background="@color/opacity_black">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/people_2x"/>
        </FrameLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="16dip"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/muted"
        ></View>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dip"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/premijum2"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dip"
            android:layout_margin="4dip"
            android:background="@color/opacity_black">
            <TextView
                android:id="@+id/premijum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48dip"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PREMIJUM POSLOVI"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hot2"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dip"
            android:layout_margin="4dip"
            android:background="@color/opacity_black">
            <TextView
                android:id="@+id/hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48dip"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOT POSLOVI"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/standard2"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dip"
            android:layout_margin="4dip"
            android:background="@color/opacity_black">
            <TextView
                android:id="@+id/standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48dip"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STANDARDNI"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
